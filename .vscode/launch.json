    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Batman",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "run",
                "ble",
                "--name", "batman",
                "${workspaceFolder}/src/run.py"
            ]
        },
        {
            "name": "Run Jaws",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "run",
                "ble",
                "--name", "jaws",
                "${workspaceFolder}/src/run.py"
            ]
        },
        {
            "name": "Run Current File",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ble",
                "${file}"
            ]
        },
        {
            "name": "Run Relative File",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "run",
                "ssh",
                "192.168.133.238",
                "${relativeFile}"
            ]
        },
        {
            "name": "Restore Factory Firmware",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/technichub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash PyBricks Firmware",
            "type": "python",
            "request": "launch",
            "module": "pybricksdev",
            "console": "integratedTerminal",
            "args": [
                "flash",
                "../pybricks-micropython/bricks/cityhub/build/firmware.zip"
            ]
        },
        {
            "name": "Flash Move Hub",
